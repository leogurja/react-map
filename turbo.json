{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "storybook-static/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "//#knip": {},
    "check": {
      "dependsOn": ["check:types", "//#check:lint", "//#knip"]
    },
    "//#check:lint": {
      "dependsOn": ["^transit"]
    },
    "check:types": {
      "dependsOn": ["^transit"]
    },
    "transit": {}
  }
}
